- obj.each do |article|
  .row
    .col-sm-8.col-sm-offset-2
      .well
        .article-title
          = link_to article.title, article_path(article)
        .article-body
          = truncate(article.description, length: 100)
          .article-meta-details
            %small
              Created by: #{article.user.username}
              Created:
              \#{time_ago_in_words(article.created_at)} ago
              Updated:
              \#{time_ago_in_words(article.updated_at)} ago
        .article-actions
          = link_to "Edit this article", edit_article_path(article), class:"btn btn-sm btn-primary"
          = link_to "Delete this article", article_path(article), method: :delete, data: {confirm: "Are you sure you want to delete?"}, class: "btn btn-sm btn-danger"
